<h2>Manage Experiments</h2>

<%= link "New experiment", to: experiment_path(@conn, :new), class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Experiment ID</th>
      <th>Author</th>
      <th>Description</th>
      <th>Submissions</th>
      <th>Creation</th>
      <th>Last Updated</th>
      <th>Active?</th>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= for experiment <- @experiments do %>

      <tr>
        <td><%= experiment.name %></td>
        <td><%= experiment.author %></td>
        <td><%= experiment.description %></td>
        <td>
          <%= experiment.current_submissions %>
          <%= if experiment.maximum_submissions do %>
            /
            <%= experiment.maximum_submissions %>
          <% end %>
        </td>

        <td><%= NaiveDateTime.truncate(experiment.inserted_at, :second) %></td>
        <td><%= NaiveDateTime.truncate(experiment.updated_at, :second) %></td>

        <td><%= experiment.active %></td>

        <td class="text-right">
          <%= link "Edit experiment", to: experiment_path(@conn, :edit, experiment), class: "btn btn-warning btn-sm" %>
        </td>
        <td class="text-right">
          <%= link "Retrieve experiment results", to: experiment_path(@conn, :retrieve_as_csv, experiment), class: "btn btn-success btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
